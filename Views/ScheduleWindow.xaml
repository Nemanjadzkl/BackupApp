<Window x:Class="BackupApp.Views.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zakaži Backup" Height="300" Width="400" 
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <CheckBox x:Name="chkEnabled" Content="Aktiviraj zakazani backup" Margin="0,0,0,10"/>
            
            <TextBlock Text="Dan:" Margin="0,5"/>
            <ComboBox x:Name="cmbDay" Margin="0,0,0,10"/>
            
            <TextBlock Text="Vreme:" Margin="0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="cmbHour" Width="60" Margin="0,0,5,0"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="cmbMinute" Width="60"/>
            </StackPanel>

            <TextBlock Text="Tip backup-a:" Margin="0,5"/>
            <ComboBox x:Name="cmbBackupType" Margin="0,0,0,10"/>
        </StackPanel>

        <TextBlock x:Name="txtStatus" Grid.Row="2" 
                  Margin="0,5" Foreground="Gray" 
                  TextWrapping="Wrap"/>

        <ProgressBar x:Name="progressBar" Grid.Row="3" Height="2" Margin="0,5"
                     IsIndeterminate="True" Visibility="Collapsed"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnTest" Content="Test" Width="80" Margin="0,0,10,0" 
                    Click="BtnTest_Click" IsEnabled="{Binding IsEnabled, ElementName=btnSave}"/>
            <Button x:Name="btnSave" Content="Sačuvaj" Width="80" Margin="0,0,10,0" 
                    Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Otkaži" Width="80" 
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
